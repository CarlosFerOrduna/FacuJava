package PracticandoJava;
import java.util.Random;
public class for2 {

	public static void main(String[] args) {

//		Generar al azar 20 números en el intervalo (0-100), imprimir la cantidad de ceros
//		que salieron

		Random aleatorio = new Random();
		
		int pibot = 0, ceros = 0, noCeros = 0;
		
		int [] numeros = new int [20];
		
		for (int i = 0 ; i < numeros.length; i++) {
			numeros[i] = aleatorio.nextInt(100)+1;
			pibot = numeros[0];
		
			if(numeros[0] == 0) {
				ceros++;
				System.out.println("El total de ceros es: " + ceros);
			}else {
				System.out.println("La cantidad de numeros que no son ceros son: " + noCeros);
			}
		}
		
		
		
		
	}

}
